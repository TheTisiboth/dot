{
  "name": "ultimate-frisbee-bot",
  "version": "1.2.0",
  "description": "Telegram bot for Ultimate Frisbee training notifications with seasonal scheduling",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "npm run build && node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "test": "npm run build && node dist/test.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint",
    "clean": "rimraf dist",
    "bot:deploy": "npm run build && docker-compose up --build -d frisbee-bot",
    "bot:logs": "docker-compose logs -f frisbee-bot",
    "bot:restart": "docker-compose restart frisbee-bot",
    "bot:stop": "docker-compose stop frisbee-bot",
    "ollama:logs": "docker-compose logs -f ollama",
    "ollama:pull": "docker-compose up ollama-setup",
    "docker:dev": "docker-compose up --build",
    "deploy": "npm run build && docker-compose down && docker-compose up --build -d && docker-compose up ollama-setup"
  },
  "keywords": [
    "telegram",
    "bot",
    "ultimate-frisbee",
    "scheduling",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.66.0",
    "ollama": "^0.6.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-telegram-bot-api": "^0.64.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-sonarjs": "^3.0.5",
    "rimraf": "^5.0.5",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
